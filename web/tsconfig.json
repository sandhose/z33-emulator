{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["global.d.ts"],
  "include": ["app", "global.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "src", "target"]
}
